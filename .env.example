# ================================================================
# Database Configuration (PostgreSQL + Prisma)
# ================================================================

# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:password@localhost:5432/ssowhsuite?schema=public
# For production, use a managed database service (e.g., Supabase, Neon, Render)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# ================================================================
# Authentication Configuration (NextAuth v5)
# ================================================================

# Secret key for NextAuth encryption and signing
# Generate with: npx auth secret
# Required for production. Keep this secure and never commit to version control
AUTH_SECRET=""

# Base URL for authentication callbacks
# Use http://localhost:3000 for development
# Use your production domain for production (e.g., https://app.example.com)
AUTH_URL="http://localhost:3000"

# ================================================================
# OAuth Provider Configuration
# ================================================================
# Only configure providers you plan to use. Remove unused providers.

# GitHub OAuth Provider
# Setup: https://docs.github.com/en/apps/oauth-apps/building-oauth-apps/creating-an-oauth-app
# CLIENT_ID: Found in OAuth app settings
# CLIENT_SECRET: Generated in OAuth app settings (keep secret)
# AUTH_GITHUB_ID=""
# AUTH_GITHUB_SECRET=""

# Google OAuth Provider
# Setup: https://developers.google.com/identity/protocols/oauth2
# CLIENT_ID: From Google Cloud Console
# CLIENT_SECRET: From Google Cloud Console (keep secret)
# AUTH_GOOGLE_ID=""
# AUTH_GOOGLE_SECRET=""

# ================================================================
# Application Configuration
# ================================================================

# Node environment
# Values: development, production, test
NODE_ENV="development"

# API URL (used by client for tRPC/API calls)
# Use http://localhost:3000 for development
NEXT_PUBLIC_API_URL="http://localhost:3000"

# ================================================================
# Development Settings (Optional)
# ================================================================

# Enable debug logging for NextAuth
# Values: true, false
# AUTH_DEBUG="false"

# Prisma query logging
# Values: "query", "info", "warn", "error"
# Useful for debugging database issues during development
# DEBUG="prisma:*"
